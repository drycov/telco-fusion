    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card-group d-block d-md-flex row">
                    <div class="card col-md-7 p-4 mb-0">
                        <div class="card-body">
                            <h1><%= t('loginPage.labelLogin')%></h1>
                            <p class="text-medium-emphasis"><%= t('loginPage.labelLoginInfo')
                                %></p>
                            <form id="loginForm" action="/login" method="post">
                                <div class="input-group mb-3"><span
                                        class="input-group-text">
                                        <i class="icon cil-user"></i>
                                    </span>
                                    <input id="username" class="form-control"
                                        type="text" name="username"
                                        placeholder="<%= t('loginPage.labelUsername')
                                    %>" autocomplete="username">
                                </div>
                                <div class="input-group mb-4"><span
                                        class="input-group-text">
                                        <i class="icon cil-lock-locked"></i>
                                    </span>
                                    <input id="password" class="form-control"
                                        type="password" name="password"
                                        placeholder="<%= t('loginPage.labelPassword') 
                                    %>" autocomplete="current-password">
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <button class="btn btn-primary px-4"
                                            type="submit" id="loginButton"><%=
                                            t('loginPage.labelLogin')%></button>
                                    </div>
                                    <div class="col-6 text-end">
                                        <button class="btn btn-link px-0"
                                            type="button" id="forgotButton"><%=
                                            t('loginPage.labelForgot')%></button>
                                    </div>
                                </div>
